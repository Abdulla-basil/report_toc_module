<odoo>
    <template id="report_toc_template">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="doc">

                <style>
                    .toc-page {
                    font-family: 'DejaVu Sans', Arial, sans-serif;
                    color: #333;
                    }

                    .toc-title {
                    font-size: 26px;
                    font-weight: 700;
                    color: #1f4fd8;
                    margin-bottom: 20px;
                    text-align: center;
                    }

                    .toc-table {
                    width: 100%;
                    border-collapse: collapse;
                    font-size: 14px;
                    }

                    .toc-table th {
                    text-align: left;
                    padding: 10px;
                    background-color: #f0f3ff;
                    color: #1f4fd8;
                    border-bottom: 2px solid #1f4fd8;
                    }

                    .toc-table td {
                    padding: 10px;
                    border-bottom: 1px dotted #ccc;
                    }

                    .toc-page-number {
                    text-align: right;
                    font-weight: 600;
                    }
                </style>

                <main>
                    <div class="page toc-page">

                        <div class="toc-title">
                            Table of Contents
                        </div>

                        <table class="toc-table">
                            <thead>
                                <tr>
                                    <th>Section</th>
                                    <th class="toc-page-number">Page</th>
                                </tr>
                            </thead>

                            <t t-set="toc_map" t-value="toc_page_map or {}"/>

                            <tbody>
                                <t t-foreach="doc.toc_line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-esc="line.toc_heading"/>
                                        </td>
                                        <td class="toc-page-number">
                                            <t t-esc="toc_map.get(line.id, '-')"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </div>
                </main>

            </t>
        </t>
    </template>
</odoo>
